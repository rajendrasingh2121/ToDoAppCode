@model ToDo.Web.ViewModel.ToDoItemViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<div>
    <h4>ToDoItem</h4>

    <p>
        <a class="btn btn-success" asp-action="Create">Add Todo</a>
    </p>

    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>
                    Update Status
                </th>
                <th>
                    Title
                </th>
                <th>
                    Done
                </th>
                <th>
                    Added
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ToDoItems)
            {
                <tr>
                    <td>
                        <form asp-action="UpdateDone" method="post">
                            <input type="checkbox" class="done-checkbox" asp-for="@item.Description" />
                            <input type="hidden" name="id" value="@item.Id" />
                        </form>
                    </td>
                    <td>
                        @item.Description
                    </td>
                    <td>
                        @(item.IsDone ? "Yes" : "No")
                    </td>
                    <td>
                        <span data-value="@item.CreateDate" class="timeStampValue">
                            @item.CreateDate
                        </span>
                    </td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>



</div>


